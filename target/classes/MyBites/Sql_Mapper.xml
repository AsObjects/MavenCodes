<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Cys_User">

    <resultMap id="Easymap" type="org.jston.entity.Easy">
        <!--id映射 -->
        <id property="pk_cys_id" column="id"/>
        <!--普通属性映射 -->
        <result property="cys_username" column="userName" />
        <result property="cys_password" column="passWord" />
    </resultMap>


    <select id="SearchUserById" parameterType="int" resultMap="Easymap">
        select *
        from Cys_User where pk_cys_id = #{id}
    </select>
    
</mapper>